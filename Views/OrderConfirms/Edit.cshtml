@model SKLadiesCorner.Models.OrderConfirm

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3 p-4">
        <h1 class="text-center mb-4 display-6 text-primary fw-bold">Edit Order Confirmation</h1>
        <hr />
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="OrderId" />

                    <input type="hidden" asp-for="SKU" />

                    <input type="hidden" asp-for="ProductId" />

                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Address" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Product.SKU" class="col-sm-4 col-form-label">Product SKU</label>
                        <div class="col-sm-8">
                            <input type="text" value="@Model.Product.SKU" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ProductId" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" value="@Model.ProductId" class="form-control-plaintext" readonly />
                        </div>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}