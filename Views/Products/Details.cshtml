@model SKLadiesCorner.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">@Model.ProductName</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 d-flex align-items-center justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="~/images/products/@Model.ImagePath" alt="@Model.ProductName" class="img-fluid rounded" style="max-height: 400px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="text-center text-muted">No Image Available</div>
                            }
                        </div>
                        <div class="col-md-7">
                            <dl class="row mt-3">
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8 text-danger fw-bold">৳@Html.DisplayFor(model => model.Price)</dd>

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                                <dt class="col-sm-4">Color:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Color)</dd>

                                <dt class="col-sm-4">Size:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Size)</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                                <dt class="col-sm-4">SKU:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.SKU)</dd>

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.StockQuantity)</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">@(Model.IsActive ? "Active" : "Inactive")</dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end bg-light">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning me-2">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>